@model IEnumerable<WebApp.Models.Product>
<table class="table table-striped">
    @foreach (var product in Model) {
        <tr>
            <td>
                <a asp-controller="Product"
                    asp-action="Detail"
                    asp-route-id="@product.Id">
                    @product.ProductName
                </a>
            </td>
            <td>@product.FormattedUnitPrice</td>
        </tr>
    }
</table>